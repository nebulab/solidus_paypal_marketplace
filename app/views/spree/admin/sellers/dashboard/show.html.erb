<% if @seller.pending? %>
  <% content_for :page_actions do %>
    <li>
      <% if @seller.action_url.present? %>
        <%= render 'paypal_onboarding_link' %>
      <% else %>
        <span class="text-danger">
          <%= t('solidus_paypal_marketplace.sellers.contact_platform_owner') %>
        </span>
      <% end %>
    </li>
  <% end %>
<% end %>
<div class="align-center"">
  <h2>
    <%= @seller.name %>
  <h2>
  <% badge_class = case @seller.status %>
  <% when 'pending'; 'warning' %>
  <% when 'accepted'; 'success' %>
  <% else; 'danger' %>
  <% end %>
  <span class="badge badge-<%= "#{badge_class}" %>">
    <%= "#{t("spree.#{@seller.status}")}" %>
  </span>
</div>

