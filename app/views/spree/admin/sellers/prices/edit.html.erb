<% admin_breadcrumb(link_to t('spree.offers'), collection_url) %>
<% admin_breadcrumb(@price.product.name) %>

<%= render partial: 'spree/shared/error_messages', locals: { target: @price } %>

<%= form_for @price, url: object_url(@price) do |f| %>
  <fieldset data-hook="new_offer">
    <legend align="center"><%= t('spree.edit_offer') %></legend>

    <%= render 'form', f: f %>

    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
